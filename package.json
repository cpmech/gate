{
  "name": "@cpmech/gate",
  "version": "2.0.0",
  "private": true,
  "author": {
    "name": "Dorival Pedroso",
    "email": "dorival.pedroso@gmail.com",
    "url": "https://github.com/cpmech"
  },
  "repository": "cpmech/gate",
  "scripts": {
    "start": "HTTPS=true react-scripts start",
    "build:app": "react-scripts build",
    "test": "react-scripts test --verbose",
    "tw": "react-scripts test --verbose",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx",
    "lint:fix": "yarn lint --fix",
    "postinstall": "rm -rf ./src/rcomps && cp -r ./node_modules/@cpmech/rcomps ./src",
    "build": "rm -rf dist && mkdir dist && rsync -av src/components/* dist/components --exclude __stories__ --exclude __tests__ && rsync -av src/service/* dist/service --exclude __tests__",
    "dist": "yarn build && cp package.rlib.json dist/package.json && cd dist/ && yarn publish --access=public || true && cd .. && rm -rf dist/"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@cpmech/basic": "^4.7.0",
    "@cpmech/rcomps": "^3.3.0",
    "@cpmech/react-icons": "^2.16.0",
    "@emotion/core": "^10.0.28",
    "@reach/router": "^1.3.3",
    "@types/jest": "25.1.3",
    "@types/node": "13.7.6",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "aws-amplify": "^2.2.6",
    "aws-amplify-react": "^3.1.7",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-responsive": "^8.0.3",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "@types/reach__router": "^1.3.0",
    "@types/react-responsive": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "typescript": "^3.8.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
