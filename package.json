{
  "name": "@cpmech/gate",
  "version": "2.3.0",
  "license": "MIT",
  "author": {
    "name": "Dorival Pedroso",
    "email": "dorival.pedroso@gmail.com",
    "url": "https://github.com/cpmech"
  },
  "repository": "cpmech/gate",
  "scripts": {
    "start": "HTTPS=true react-scripts start",
    "build:app": "react-scripts build",
    "test": "react-scripts test --verbose",
    "tw": "react-scripts test --verbose",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx",
    "lint:fix": "yarn lint --fix",
    "postinstall": "[ -f ./scripts/npm_postinstall.bash ] && bash ./scripts/npm_postinstall.bash",
    "build:lib": "rm -rf dist && rollup --config rollup.config.js",
    "build:comps": "rsync -av src/components/* dist/components --exclude __stories__ --exclude __tests__",
    "build": "yarn build:lib && yarn build:comps",
    "dist": "yarn build && yarn publish --access=public"
  },
  "main": "dist/cjs/lib.js",
  "module": "dist/esm/lib.js",
  "types": "dist/esm/lib.d.ts",
  "files": [
    "dist"
  ],
  "description": "My components for AWS Cognito projects",
  "keywords": [
    "React",
    "Components",
    "Cognito",
    "Amplify"
  ],
  "dependencies": {
    "@cpmech/basic": "^4.8.0",
    "@cpmech/rcomps": "^3.3.0",
    "@cpmech/react-icons": "^2.16.0",
    "@emotion/core": "^10.0.28",
    "@reach/router": "^1.3.3",
    "@types/jest": "25.1.3",
    "@types/node": "13.7.7",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "aws-amplify": "^2.2.6",
    "aws-amplify-react": "^3.1.7",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-helmet": "^5.2.1",
    "react-responsive": "^8.0.3",
    "react-scripts": "3.4.0",
    "typography": "^0.16.19",
    "typography-theme-fairy-gates": "^0.16.19"
  },
  "devDependencies": {
    "@types/reach__router": "^1.3.0",
    "@types/react-helmet": "^5.0.15",
    "@types/react-responsive": "^8.0.2",
    "@types/typography": "^0.16.3",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "rollup": "^1.32.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
