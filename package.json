{
  "name": "@cpmech/gate",
  "version": "1.21.0",
  "private": true,
  "dependencies": {
    "@cpmech/basic": "^4.5.0",
    "@cpmech/rcomps": "^2.7.1",
    "@cpmech/react-icons": "^2.14.0",
    "@emotion/core": "^10.0.27",
    "@reach/router": "^1.3.1",
    "@types/jest": "25.1.3",
    "@types/node": "13.7.4",
    "@types/react": "16.9.22",
    "@types/react-dom": "16.9.5",
    "aws-amplify": "^2.2.5",
    "aws-amplify-react": "^3.1.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-responsive": "^8.0.3",
    "react-scripts": "3.4.0",
    "typescript": "^3.8.2"
  },
  "scripts": {
    "start": "HTTPS=true react-scripts start",
    "build:app": "react-scripts build",
    "test": "react-scripts test",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .eslintignore . --ext ts --ext tsx",
    "lint:fix": "yarn lint --fix",
    "build:lib": "rm -rf dist && rollup --config rollup.config-rlib.js",
    "eject": "react-scripts eject",
    "postinstall": "rm -rf ./src/rcomps && cp -r ./node_modules/@cpmech/rcomps ./src",
    "build": "rm -rf dist && mkdir dist && rsync -av src/components/* dist --exclude __stories__ --exclude __tests__",
    "dist": "yarn build && cp package.rlib.json dist/package.json && cd dist/ && yarn publish --access=public || true && cd .. && rm -rf dist/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/reach__router": "^1.3.0",
    "@types/react-responsive": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  }
}
